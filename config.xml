<?xml version="1.0" encoding="UTF-8" ?>
<widget xmlns   = "http://www.w3.org/ns/widgets"
        xmlns:gap   = "http://phonegap.com/ns/1.0"
        id          = "info.travelining.app"
        versionCode = "10"
        version     = "1.0">

    <name>Tadapp.DEMO</name>

    <description>
        Окунись в сказочный мир Ингушетии
    </description>

    <author>Tadapp</author>

    <plugin name='cordova-plugin-splashscreen' />
    <plugin name='cordova-plugin-inappbrowser' />
    <plugin name='cordova-plugin-network-information' />

    <preference name='phonegap-version' value='cli-9.0.0' />

    <gap:plugin name='onesignal-cordova-plugin' spec='2.4.5' source='npm' />

    <preference name='android-build-tool' value='gradle' />
    <preference name="android-targetSdkVersion" value="28" />
    <preference name='orientation' value='portrait' />

    <preference name="SplashMaintainAspectRatio" value="false" />
    <preference name="SplashScreenSpinnerColor" value="#ffffff" />

    <preference name="Fullscreen" value="false" />


    <platform name="android">
        <icon src="res/android/icon/1593295407_9e18b873ebb2ae2a4fe7.png" density="ldpi" />
        <icon src="res/android/icon/1593295407_c08470d70066f06cbafc.png" density="mdpi" />
        <icon src="res/android/icon/1593295407_0483cc2b3b92947ff97e.png" density="hdpi" />
        <icon src="res/android/icon/1593295407_5d4cad992b1e5ed7982c.png" density="xhdpi" />
        <icon src="res/android/icon/1593295407_911716127c0cf60c2b16.png" density="xxhdpi" />
        <icon src="res/android/icon/1593295407_9b98d5ac962ce2f1dbaa.png" density="xxxhdpi" />

        <splash src="res/android/screen/hdpi_port_1593295486_ab9723f505a5317f4123.png" density="port-hdpi"/>
        <splash src="res/android/screen/ldpi_port_1593295486_ab9723f505a5317f4123.png" density="port-ldpi"/>
        <splash src="res/android/screen/mdpi_port_1593295486_ab9723f505a5317f4123.png" density="port-mdpi"/>
        <splash src="res/android/screen/xhdpi_port_1593295486_ab9723f505a5317f4123.png" density="port-xhdpi"/>
        <splash src="res/android/screen/hdpi_land_1593295486_ab9723f505a5317f4123.png" density="land-hdpi"/>
        <splash src="res/android/screen/ldpi_land_1593295486_ab9723f505a5317f4123.png" density="land-ldpi"/>
        <splash src="res/android/screen/mdpi_land_1593295486_ab9723f505a5317f4123.png" density="land-mdpi"/>
        <splash src="res/android/screen/xhdpi_land_1593295486_ab9723f505a5317f4123.png" density="land-xhdpi"/>
    </platform>

    <access origin='*'/>
    <plugin name='cordova-plugin-whitelist' />
    <allow-intent href='http://*/*'/>
    <allow-intent href='https://*/*'/>
    <allow-intent href='tel:*'/>
    <allow-intent href='sms:*'/>
    <allow-intent href='mailto:*'/>
    <allow-intent href='geo:*'/>

</widget>